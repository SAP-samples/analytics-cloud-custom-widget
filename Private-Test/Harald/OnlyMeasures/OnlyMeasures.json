{
  "eula": "",
  "vendor": "SAP",
  "license": "",
  "id": "com.sap.sac.sample.om.pie_chart",
  "version": "1.0.0",
  "name": "OnlyMeasure PieChart",
  "newInstancePrefix": "OnlyMeasureChart",
  "description": "OnlyMeasureChart Pie Chart",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-sap-sample-om-pie_chart",
      "url": "https://obey.wdf.sap.corp/temp/AppDesignCustomWidgets/custom-widget-samples/CWDBDemo/Harald/OnlyMeasures/OnlyMeasures_main.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "properties": {
		"width": {
			"type": "integer",
			"default": 420
		},
		"height": {
			"type": "integer",
			"default": 420
		},
		"measureFeed": {
			"type": "string[]",
			"default": []
		},
		"caption": {
			"type": "string",
			"description": "The caption of the pie chart",
			"default": ""
		}
  },
  "dataBindings": {
		"myDataSource": {
			"feeds": [
				{
					"id": "measures",
					"description": "Measures",
					"type": "mainStructureMember"
				}
			]
		}
	},
  "methods": {
    "getCaption": {
      "returnType": "string",
      "description": "Get the caption of the pie chart",
      "parameters": [],
      "body": "return this.caption;"
    },
    "setCaption": {
      "description": "Set the caption of the pie chart",
      "parameters": [
        {
          "name": "caption",
          "type": "string",
          "description": "The new caption"
        }
      ],
      "body": "this.caption = caption;"
    },
    "openSelectModelDialog": {
      "parameters": [],
      "body": "this.dataBindings.getDataBinding('myDataSource').openSelectModelDialog();"
    },
    "getMeasures": {
      "parameters": [],
      "body": "return this.dataBindings.getDataBinding('myDataSource').getDataSource().getMeasures();",
      "returnType": "MeasureInfo[]"
    },
    "addMeasure": {
      "parameters": [
        {
          "name": "measureId",
          "type": "string"
        }
      ]
    },
    "removeMeasure": {
      "parameters": [
        {
          "name": "measureId",
          "type": "string"
        }
      ]
    },
    "getMeasuresOnFeed": {
      "parameters": [],
      "returnType": "string[]"
    },
    "getDataSource": {
      "parameters": [],
      "body": "return this.dataBindings.getDataBinding('myDataSource').getDataSource();",
      "returnType": "DataSource"
    },
    "setModel": {
      "parameters": [
        {
          "name": "modelId",
          "type": "string"
        }
      ],
      "body": "this.dataBindings.getDataBinding('myDataSource').setModel(modelId);"
    }

  },
  "events": {
    "onResultChanged": {
      "description": "called when the result set of the widget changes"
    },
    "onClick": {
      "description": "called when the widget is clicked"
    }
}}
